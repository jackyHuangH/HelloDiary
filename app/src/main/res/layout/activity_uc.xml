<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.hzjdemo.hellodiary.widgets.uc.root.UCRootView
        android:id="@+id/ucRootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windowBg"
        android:orientation="vertical"
        tools:context="com.zibuyuqing.ucbrowser.MainActivity">

        <include
            android:id="@+id/llUCHeadLayout"
            layout="@layout/layout_uc_head"/>

        <include
            android:id="@+id/llUCNewsListLayout"
            layout="@layout/layout_uc_news"/>

        <include
            android:id="@+id/llTopSearchBar"
            layout="@layout/layout_uc_top_search_bar"
            android:visibility="invisible"/>

        <include
            android:id="@+id/llUCBottomBar"
            layout="@layout/layout_uc_bottom_bar"/>


    </cn.hzjdemo.hellodiary.widgets.uc.root.UCRootView>

    <include
        layout="@layout/layout_uc_pagers_manager"
        android:visibility="gone"></include>
</FrameLayout>

