<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="18dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="12/20"
            android:textColor="@color/greyishFour"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:30"
            android:textColor="@color/brownishGreyThree"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/whiteSix" />

        <ImageView
            android:id="@+id/iv_ring_record"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ring_blue" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tv_record_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/dark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_record_user_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_record_user_name"
            android:text="上海 ip:193.195.**"
            android:textColor="@color/steelGreyTwo"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_record_user_ip"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_record_user_ip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/joined"
                android:textColor="@color/mangoFour"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_record_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text=""
                android:textColor="@color/mangoFour"
                android:textSize="12sp" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/unit_pour"
                android:textColor="@color/mangoFour"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>